
@{
    ViewBag.Title = "kisilerListe";
}


<div class="row">
    <div class="col-md-6">
        <!--  -->
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Sınıftaki öğrenci bilgileri
                </div>
                <br />
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="table-responsive">
                        <form role="form">
                            <table class="table table-condensed table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th class="col-xs-1">Ad Soyad</th>
                                        <th class="col-xs-1">E-mail</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Kontrol_sinif k in ViewBag.ks)
                                    {
                                        if (k.sinif_id == ViewBag.sid)
                                        {

                                            <tr>

                                                <td>@k.Ogrenci.Kullanicilar.ad @k.Ogrenci.Kullanicilar.soyad</td>
                                                <td>
                                                    @k.Ogrenci.Kullanicilar.email
                                                </td>

                                            </tr>

                                        }
                                    }
                                </tbody>
                            </table>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!--  -->
    </div>
</div>

@if (ViewBag.kisiSayi == 0)
{
    <h3>Sınıfta öğrenci bulunmuyor.</h3>
}
