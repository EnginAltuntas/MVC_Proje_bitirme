@{
    ViewBag.Title = "odev_yukle";
}

<title>Ödev Teslim Sayfası</title>

<link type="text/css" href="/Content/assets/css/optional/dropzone/basic.css" rel="stylesheet" />
<link type="text/css" href="/Content/assets/css/optional/dropzone/dropzone.css" rel="stylesheet" />
<link type="text/css" href="/Content/assets/css/optional/dropzone/circloid-dropzone.css" rel="stylesheet" />
<link type="text/css" href="/Content/assets/css/styles-core.css" rel="stylesheet" />
<link type="text/css" href="/Content/assets/css/styles-core-responsive.css" rel="stylesheet" />

<link type="text/css" href="/Content/assets/css/demo-files/form-file-upload.css" rel="stylesheet" />


<h2>odev_yukle</h2>


<div class="row">
    <div class="col-md-8">
        <div class="block">

            <div class="block-heading">

                <h1>
                    <p class="text-center">Ödev Teslim Sayfası</p>
                </h1>

            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-12">


                            @using (Html.BeginForm("UploadBlob", "Blob", FormMethod.Post, new { encType = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()


                                <p class="text-center">
                                    Dosyanızı kırmızı alana sürükleyin yada tıklayın.
                                </p>

                                    <input type="file" name="uploadFileName" id="customized-dropzone-2" class="dropzone dz-clickable col-md-12">

                                    <br />
                                    <p class="text-center">
                                        <button type="submit" class="btn btn-primary btn-lg">Kaydet</button>
                                    </p>
                                    <input type="hidden" name="nereye" value="2" /> @*odev tablosuna ekler*@

                            }

                            @*<h3 style="color:darkgreen"><p class="text-center">@TempData["sonuc"]</p></h3>*@


                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


<script type="text/javascript" src="/Content/assets/js/script.js"></script>
<script type="text/javascript" src="/Content/assets/js/demo-files/form-file-upload.js"></script>
